<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav"
    app:startDestination="@id/authActivity">

    <activity
        android:id="@+id/authActivity"
        android:name="ru.mirea.kirichenkoal.lesson9.presentation.auth.AuthActivity"
        android:label="AuthActivity"
        tools:layout="@layout/activity_auth">

        <action
            android:id="@+id/action_to_main"
            app:destination="@id/mainActivity" />
    </activity>

    <activity
        android:id="@+id/mainActivity"
        android:name="ru.mirea.kirichenkoal.lesson9.presentation.MainActivity"
        android:label="MainActivity"
        tools:layout="@layout/activity_main" />

</navigation>