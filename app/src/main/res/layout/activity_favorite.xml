<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Верхняя панель -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Избранные растения"
            app:titleTextColor="@color/black"
            app:navigationIcon="@drawable/ic_favorite"
            app:navigationContentDescription="Назад"
            app:menu="@menu/main_menu" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Основной блок контента -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Заголовок раздела -->
            <TextView
                android:id="@+id/textFavoritesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Мои избранные растения"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <!-- Подзаголовок -->
            <TextView
                android:id="@+id/textFavoritesHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Здесь отображаются растения, добавленные в избранное"
                android:textColor="@color/gray_600"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Список избранных -->
            <ListView
                android:id="@+id/listViewFavorites"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@color/gray_300"
                android:dividerHeight="1dp" />

            <!-- Кнопка возврата -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonBackToMain"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Вернуться"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_arrow_back"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/white"
                android:backgroundTint="@color/green_500"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
