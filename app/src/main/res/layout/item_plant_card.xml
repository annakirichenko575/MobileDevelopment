<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/green_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imagePlant"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_plant_logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textPlantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Растение"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textPlantDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Описание растения"
                android:textSize="13sp"
                android:textColor="@color/gray_600"
                android:layout_marginBottom="4dp" />

            <Button
                android:id="@+id/buttonFavorite"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="В избранное"
                android:textSize="12sp"
                android:backgroundTint="@color/green_500"
                android:textColor="@android:color/white"
                android:paddingHorizontal="12dp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
